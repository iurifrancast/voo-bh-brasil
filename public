<body>
  <header>Encontre Voos Baratos ðŸ‘‡</header>

  <div class="container">
    <label for="destination">Destino:</label>
    <input type="text" id="destination" placeholder="Ex: SÃ£o Paulo, Salvador, Recife...">
    
    <label for="date">Data:</label>
    <input type="date" id="date">

    <button onclick="searchFlights()">Buscar voos</button>
  </div>

  <div id="loading" class="loading" style="display:none;">Buscando voos...</div>

  <div id="results" class="result"></div>

  <script>
    async function searchFlights() {
      const destination = document.getElementById("destination").value;
      const date = document.getElementById("date").value;

      if (!destination || !date) {
        alert("Preencha o destino e a data!");
        return;
      }

      document.getElementById("loading").style.display = "block";
      document.getElementById("results").innerHTML = "";

      const response = await fetch(`/search?destination=${destination}&date=${date}`);
      const data = await response.json();

      document.getElementById("loading").style.display = "none";

      if (!data.flights || data.flights.length === 0) {
        document.getElementById("results").innerHTML = "<p>Nenhum voo encontrado.</p>";
        return;
      }

      data.flights.forEach(flight => {
        const card = `
          <div class="card">
            <h3>${flight.airline}</h3>
            <p><strong>Partida:</strong> ${flight.departure_time}</p>
            <p><strong>Chegada:</strong> ${flight.arrival_time}</p>
            <p><strong>PreÃ§o:</strong> R$ ${flight.price}</p>
          </div>
        `;
        document.getElementById("results").innerHTML += card;
      });
    }
  </script>

